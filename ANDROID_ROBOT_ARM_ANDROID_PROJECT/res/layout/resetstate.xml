<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/navy"    
    android:orientation="vertical" >
   
     
   <!-- BASE BUTTONS -->
   <LinearLayout
       android:id="@+id/layout30"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
       
       <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5"
           android:text = "Base Motor" />
       <TextView 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5"
           android:gravity="center_horizontal" 
           android:text = "Range[-4 = 4]"/>
       
       <TextView
           android:id="@+id/txtResetBaseMotor"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5" />            
    
  </LinearLayout>
  
    
   <!-- SHOULDER BUTTONS -->
   <LinearLayout
       android:id="@+id/layout31"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
       
        <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5"
           android:text = "Shoulder Motor" />
       <TextView 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5"
           android:gravity="center_horizontal" 
           android:text = "Range[0 = 4]"/>
       
       <TextView
           android:id="@+id/txtResetShoulderMotor"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5" />    
      
  </LinearLayout>
  
   
   <!-- ELBOW BUTTONS --> 
   <LinearLayout
       android:id="@+id/layout32"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
       
       <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5"
           android:text = "Elbow Motor" />
       <TextView 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5"
           android:gravity="center_horizontal" 
           android:text = "Range[0 = 4]"/>
       
       <TextView
           android:id="@+id/txtResetElbowMotor"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5" />              
    
  </LinearLayout>
  
   
  <!-- WRIST BUTTONS -->  
  <LinearLayout
       android:id="@+id/layout33"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
       
      <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5"
           android:text = "Wrist Motor" />
       <TextView 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5"
           android:gravity="center_horizontal" 
           android:text = "Range[0 = 5]"/>
       
       <TextView
           android:id="@+id/txtResetWristMotor"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5" />             
    
  </LinearLayout> 
  
     
  <!-- HAND --> 
   <LinearLayout
       android:id="@+id/layout34"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
       
      <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5"
           android:text = "Hand Motor" />
       <TextView 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5"
           android:gravity="center_horizontal" 
           android:text = "Range[0 = 2]"/>
       
       <TextView
           android:id="@+id/txtResetHandMotor"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_weight = "0.5" />            
    
  </LinearLayout> 
  
    <!--  LAYOUT SPACE 0 -->
   <LinearLayout
       android:id="@+id/layoutSpace35"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
       
       <TextView 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:gravity="center_horizontal" 
           android:text = "       "/>
   
   </LinearLayout>
  
   <!-- RESET -->
  <LinearLayout
       android:id="@+id/layout36"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">
      
      
	<Button
          android:id="@+id/cmdResetRobot"
          android:layout_width="50px"
          android:layout_height="50px"
          android:background="@drawable/bullet"/>
      
	<TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/resetTxt"
          android:text="\tReset"
          android:textSize="20px"
          android:onClick="onClick"
          android:clickable="true"
          /> 
      
  </LinearLayout>
  <!-- RETURN -->
  <LinearLayout
       android:id="@+id/layout37"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content">

      
	<Button
          android:id="@+id/cmdReturnReset"
          android:layout_width="50px"
          android:layout_height="50px"
          android:background="@drawable/minus"/>
      
	<TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/returnTxt"
          android:text="\tReturn to main menu"
          android:textSize="20px"
          android:onClick="onClick"
          android:clickable="true"
          />       
      
      
  </LinearLayout>
     
</LinearLayout>